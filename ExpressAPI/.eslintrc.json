{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
			"linebreak-style": ["error", "windows"],
			"no-console": ["error", {
				"allow": ["warn", "error", "info"]
			}],
			"semi": ["error", "never"],
			"quotes": ["error", "single"],
			"import/extensions": ["error", "never"]
		},
		"settings": {
			"import/extensions": [".ts", ".js"],
			"import/resolver": {
				"node": {
					"extensions": [
						".js",
						".ts"
					]
				}
			}
		}
}